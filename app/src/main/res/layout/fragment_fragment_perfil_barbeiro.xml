<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acoes.Barbeiro.FragmentPerfilBarbeiro"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorini"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/aliasfotoperfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="-90dp"
                app:srcCompat="@drawable/ic_action_p"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <!--<ImageView
                android:id="@+id/aliasfotoperfil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="-90dp"
                android:src="@drawable/ic_action_newperfil" />-->

            <TextView
                android:id="@+id/alianome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColorHint="@color/common_google_signin_btn_text_dark"/>


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="215dp"
            app:cardBackgroundColor="#E2E2E2">
            <!--app:cardBackgroundColor="@android:color/darker_gray"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imagem1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp"
                        app:srcCompat="@drawable/ic_action_p" />


                    <!--<ImageView
                        android:id="@+id/imagem1"
                        android:layout_width="137dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_menu_camera" />-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/aliasfoto2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp"
                        app:srcCompat="@drawable/ic_action_p" />


                    <!--<ImageView
                        android:id="@+id/aliasfoto2"
                        android:layout_width="137dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_menu_camera" />-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/aliasfoto3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp"
                        app:srcCompat="@drawable/ic_action_p" />
                    <!--<ImageView
                        android:id="@+id/aliasfoto3"
                        android:layout_width="137dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_menu_camera" />-->


                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="-300dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp">


        </LinearLayout>


    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="170dp"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        app:cardBackgroundColor="#E2E2E2"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Editar Perfil"
                android:textColor="#000"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>/>

</FrameLayout>